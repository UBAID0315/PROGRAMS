        cin.ignore();
        if (choice == 1)
        {
            Filename.open("Filename",ios::app);
            if (!Filename)
            {
                cout<<"File not exist"<<endl;
            }
            else
            {
                cout<<"Enter Journal: ";
                getline(cin,journal);
            
                if ( < size)
                {
                    arr[size] = journal;
                    cout<<"\nJournal added successfully"<<endl;
                    i++;
                    Filename<<journal<<endl;                    
                    Filename.close();
                }
            }
        }   
        else if (choice == 2)
        {
            for (int i = 0; i < size; i++)
            {
                cout<<"\n"<<arr[i];
            }
