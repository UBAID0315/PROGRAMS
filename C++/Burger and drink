#include<iostream>
using namespace std;

int main()
{
	char choice,choose;
	int result,burger = 500,drink = 200;
	
	cout<<"Do you want a burger?Y/N"<<endl;
	cin>>choice;
	if(choice == 'Y')
	{
		cout<<"\nYour burger has been added"<<endl;
		cout<<"Do you want to add fries and cold drink in just 200Rs?Y/N"<<endl;
		cin>>choose;
		if(choose == 'Y')
		{
			cout<<"\nThank You"<<endl;
			result = burger + drink;
			cout<<"Your total bill is: "<<result<<endl;
		}
		else
		{
			cout<<"\nYour choice! Thank You"<<endl;
			result = burger;
			cout<<"Your total bill is: "<<result<<endl;			
		}
	}
}
