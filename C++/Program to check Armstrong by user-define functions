#include<iostream>
using namespace std;

int no_digits(int);
int power(int , int);
int total(int , int);
int check(int , int);

int main()
{
    int num,result;
     cout<<"Enter the number: ";
     cin>>num;
    
    result = no_digits(num);
    result = check(result,num);
}

int no_digits(int num)
{
    int n = num,sum,digit;
    int count=0;
    
    while(n != 0)
    {
        digit = n % 10;
        n = n / 10;
        count++;
    }
    sum = total(count, num);
    return sum;
}

int total(int count, int num)
{
    int n = num,digit,sum=0;
    
    while(n != 0)
    {
        digit = n % 10;
        sum += power(digit,count); 
        n = n / 10;
    }
    return sum;
}

int power(int digit, int count)
{
  int total = 1;
    for(int i = 1; i<=count; i++)
    {
        total = digit * total;
    }
    
    return total; 
}

int check(int result, int num)
{
	if(result == num)
	{
		cout<<"armstrong";
	}
	else
	{
		cout<<"Its not armstrong number";
	}
}
